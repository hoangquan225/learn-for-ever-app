<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/secondaryColor" /> <!-- Màu nền của View -->
<!--    <corners android:radius="8dp" /> &lt;!&ndash; Bo góc của View &ndash;&gt;-->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Khoảng cách giữa bóng đổ và nội dung của View -->
    <stroke
        android:color="#888888"
        android:width="1dp" /> <!-- Màu và độ dày của viền bóng đổ -->
    <gradient
        android:startColor="#DADADA"
        android:endColor="#FFFFFF"
        android:angle="270" /> <!-- Màu gradient của bóng đổ -->
</shape>
